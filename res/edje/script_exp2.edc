#define MY_OFFSET_DEFAULT 000
#define MY_OFFSET_LEFT -200
collections {
   base_scale: 1.0;
   group { name: "main";
      script {
         public down_x = 0, down_y = 0;
         public dir_move = 0;
         public left_page_move(dx) {
            custom_state(PART:"movable_box", "default", 0.0);
            set_state_val(PART:"movable_box", STATE_REL1_OFFSET, dx+MY_OFFSET_DEFAULT,0);
            set_state_val(PART:"movable_box", STATE_REL2_OFFSET, dx+MY_OFFSET_DEFAULT,0);
            //    set_state_val(PART:"right_bottom_point_base", STATE_REL2_OFFSET, 100, 150);
            set_state(PART:"movable_box", "custom", 0.0);           
         }
         public main_page_move(dx) {
            custom_state(PART:"main_rect", "default", 0.0);
            set_state_val(PART:"main_rect", STATE_REL1_OFFSET, dx+MY_OFFSET_DEFAULT,0);
            set_state_val(PART:"main_rect", STATE_REL2_OFFSET, dx+MY_OFFSET_DEFAULT,0);
            //    set_state_val(PART:"right_bottom_point_base", STATE_REL2_OFFSET, 100, 150);
            set_state(PART:"main_rect", "custom", 0.0);           
         }         
      }
      parts {
         part { name: "main_rect";
            type: RECT;
            scale: 1;
            description { state: "default" 0.0;
               fixed: 1 1;
               // min: 300 300;
               // max: 300 300;
               rel1 {
                  relative: 0.1 0.1;
               }
               rel2 {
                  relative: 0.9 0.9;
               }
               color: 0 0 0 255;
            }
         }
         part { name: "top_rect";
            type: RECT;
            scale: 1;
            description { state: "default" 0.0;
               min: 0 40;
               fixed: 0 1;
               rel1.relative: 0.0 0.0;
               rel2.relative: 1.0 0.0;
               align: 0.5 0.0;
               color: 128 128 128 128;
            }
         }         
         part { name: "label";
            type: TEXT;
            description { state: "default" 0.0;
               color: 255 255 255 255;
               rel1.to: "top_rect";
               rel2.to: "top_rect";
               text {
                  text: "label";
                  font: "Sans";
                  size: 20;
                  align: 0.5 0.0;
               }
            }
         }

         part { name: "movable_box";
            type: RECT;
            scale: 1;
            description { state: "default" 0.0;
               rel1.relative: -0.7 0.1;
               rel2.relative: 0.1 0.9;
               color: 255 0 255 128;
            }
         }
         part { name: "text_sample";
            type: TEXT;
            description { state: "default" 0.0;
               color: 255 255 255 255;
               rel1.to: "movable_box";
               rel2.to: "movable_box";
               text {
                  text: "text_sample";
                  font: "Sans";
                  size: 20;
                  align: 0.5 0.5;
               }
            }
         }         

         part { name: "bottom_rect";
            type: RECT;
            scale: 1;
            description { state: "default" 0.0;
               min: 10 100;
               fixed: 0 1;
               rel1.relative: 0.0 1.0;
               rel2.relative: 1.0 1.0;
               align: 0.8 1.0;
               color: 255 0 0 128;
            }
         }
      }
      program { name: "goto_default";
         action: STATE_SET "default" 0.0;
         target: "movable_box";
         transition: SINUSOIDAL 0.3;
      }
      program { name: "goto_state2";
         action: STATE_SET "state2" 1.0;
         target: "movable_box";
         transition: SINUSOIDAL 0.3;
      }
      program { name: "test mouse down";
         signal: "mouse,down,1";
         source: "bottom_rect";
         script {
            new mx, my;
            get_mouse(mx, my);
            set_int(down_x, mx);
            set_int(down_y, my);
            set_text(PART:"label", "mouse,down");
           // run_program(PROGRAM:"goto_default");
         }
      }
      program { name: "test mouse up";
         signal: "mouse,up,1";
         source: "bottom_rect";
         script {
            set_int(down_x, 0);
            set_int(down_y, 0);
            set_int(dir_move,0);
            set_text(PART:"label", "mouse,up");
            run_program(PROGRAM:"goto_default");
//            set_state_val(PART:"movable_box", STATE_REL1_OFFSET, 10,10);            
         }
      }
      program { name: "test mouse move";
         signal: "mouse,move";
         source: "bottom_rect";
         script {       
            new x0;
            x0 = get_int(down_x);
            if (x0 == 0) return ;
            new mx, my, dx;
            get_mouse(mx, my);
            dx = mx - x0;
            if (get_int(dir_move)==0) {
               if (dx>0) set_int(dir_move,1)
               else set_int(dir_move,-1);
            }
            new buf[128];
            snprintf(buf, sizeof(buf),"mouse: %d %d",get_int(dir_move), dx);
            set_text(PART:"label", buf);
            if (get_int(dir_move) > 0)
            	left_page_move(dx);
            else 
            	main_page_move(dx);
         }
      }
   }